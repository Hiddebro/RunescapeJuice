@model WebShopAsp.net_MVC_.ViewModels.Item_ViewModel
@using WebShopAsp.net_MVC_.ViewModels

@{
    Layout = "_UserLayout";
}


<form asp-controller="Item" asp-action="AddItem" method="post" class="form-signin">
       <img class="mb-4"  src="https://runescapetoday.com/wp-content/uploads/2022/02/LOGOweb.png"  alt="Runescape Money"  height="63" />

 
       <div class="form-group">
           <div  class="InputBackgroundBox">
               <input asp-for="ItemName" placeholder="Item Name" class="form-control text-center" required />
           </div>
       
       </div>
       <div class="form-group">
           <div class="InputBackgroundBox">
                <input asp-for="Price" placeholder="Price" class="form-control text-center" required />
           </div>
       
       </div>
        <div class="form-group">
           <div class="InputBackgroundBox">
                <input asp-for="Amount" placeholder="Amount" class="form-control text-center" required />
           </div>
       
       </div>

       <div class="form-signin">
           <input class="btn btn-dark" type="submit" value="Create Item" />
           <br />
           </div>



         

       </form>
       <form asp-controller="Account" asp-action="GoToUserInfo" method="post" class="form-signin">
         <div class="form-signin">
           <input class="btn btn-dark" type="submit" value="Back to Info" />
           <br />
           </div>
           </form>